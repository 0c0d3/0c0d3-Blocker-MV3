{
  "manifest_version": 3,
  "name": "0c0d3 Blocker",
  "version": "1.0",
  "description": "Block with 0c0d3",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "cookies",
    "storage",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*/*"
  ],
   "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": "icons/icon.png"
  }
}

